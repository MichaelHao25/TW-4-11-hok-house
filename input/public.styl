			margin 0 auto 16px
			max-width 606px
			width 75%
			height 22px
			border-radius 12.5px
			background #ccc
			overflow hidden
			.bar
				height 100%
				border-radius 12.5px
				background #2b6967
				width 0
				transition 0.3s
		.value
			font-size 22px
			color #4a4a4a
			line-height 30px
	.radio-wrap
		max-width 606px
		width 75%
		margin 0 auto
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		flex-wrap wrap
		.radio
			flex 0 0 48%
			height 185px
			background url('../img/button-unactive.png') center center/100% 100% no-repeat
			margin-bottom 28px
			transition 0.3s
			cursor pointer
			&.active
				background-image url('../img/button-active.png')
				h3
					color #fff
			label
				display block
				width 100%
				height 100%
				position relative
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				align-items center
				justify-content center
				flex-direction column
			input
				position absolute
				top 0
				bottom 0
				left 0
				right 0
				appearance none
			h3
				font-size 25px
				color #4a4a4a
				line-height 36px
			.en
				font-size 20px
				line-height 28px
	.textarea
		position relative
		max-width 606px
		width 75%
		margin 0 auto 16px
		padding 20px
		height 229px
		background #fff
		box-sizing border-box
		border-radius 12px
		&.active
			&:before
			&:after
				opacity 0
		&:before
			position absolute
			top 20px
			left 20px
			font-size 19px
			color #808080
			line-height 28px
			content attr(data-cn)
			white-space pre-wrap
			transition 0.3s
		&:after
			position absolute
			top 48px
			left 20px
			font-size 19px
			color #808080
			line-height 28px
			content attr(data-en)
			white-space pre-wrap
			transition 0.3s
		textarea
			width 100%
			height 100%
			border none
			outline none
			font-size 19px
			color #808080
			line-height 28px
