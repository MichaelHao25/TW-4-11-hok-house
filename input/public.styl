		background #fff
		margin-bottom 16px
		border-radius 12px
		input
			padding 5px 6px 5px 8px
			line-height 26px
			border 1px solid #d8d8d8
			border-radius 6px
			width 300px
			outline none
			text-align right
			&.manager
				border-color #2b6967
				&::placeholder
					color #2b6967
		a
			display block
			width 91px
			height 37px
			border-radius 8px
			font-size 15px
			color #fff
			line-height 37px
			text-align center
			background #2b6967
		.df
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			input
				width 50px
			.label
				padding 0 10px
