			width 110px
			height 110px
			font-size 12px
			line-height 20px
			color #898989
			text-align center
			background url('../img/button-circle-unactive.png') center center/100% 100% no-repeat
			cursor pointer
			transition 0.3s
			&.item-1
				.icon
					background-image url('../img/社群-fb-unactive.png')
				&:hover
				&.active
					.icon
						background-image url('../img/社群-fb-active.png')
			&.item-2
				.icon
					background-image url('../img/社群-line-unactive.png')
				&:hover
				&.active
					.icon
						background-image url('../img/社群-line-active.png')
			&.item-3
				.icon
					background-image url('../img/社群-instagram-unactive.png')
				&:hover
				&.active
					.icon
						background-image url('../img/社群-instagram-active.png')
			&.item-4
				.icon
					background-image url('../img/社群-wechat-unactive.png')
				&:hover
				&.active
					.icon
						background-image url('../img/社群-wechat-active.png')
			&.item-5
				.icon
					background-image url('../img/社群-weibo-unactive.png')
				&:hover
				&.active
					.icon
						background-image url('../img/社群-weibo-active.png')
			&:hover
			&.active
				color #fff
				background-image url('../img/button-circle-active.png')
			.icon
				width 52px
				height 52px
				margin 18px auto 0
				transition 0.3s
				background url() center center/100% auto no-repeat	
