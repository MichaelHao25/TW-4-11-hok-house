.data-range
	position absolute
	width 606px
	max-width 75%
	box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.15)
	border-radius 12px
	background #fff
	display none
	position fixed
	@media(max-width 1100px)
		top 0!important
		bottom 0!important
		left 0!important
		right 0!important
		width 100%
		max-width 100%
		border-radius 0
		overflow scroll
		-webkit-overflow-scrolling touch
		&::-webkit-scrollbar
			display none
	&.active
		transition 0.3s
		display block
		opacity 0
	&.show
		opacity 1
	.date
		padding 0 13px
		line-height 43px
		font-size 12px
		color rgba(0, 0, 0, 0.65)
		border-bottom 1px solid rgba(0, 0, 0, 0.3);
		@media(max-width 1100px)
			padding 10px 15px
			line-height 54px
			font-size 26px
	.yaer
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		border-bottom 1px solid rgba(0, 0, 0, 0.3);
		position relative
		// .yaer-month
		// 	position relative
		@media(max-width 1100px)
			margin-bottom 30px
			padding 10px 0
		.left-control
			left 13px
			top 0
			bottom 0
		.right-control
			right 13px
			top 0
			bottom 0
		.left-control
		.right-control
			position absolute
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			.year-previous
			.month-previous
			.month-next
			.year-next
				height 100%
				width 30px
				cursor pointer
				text-align center
				line-height 44px
				background url('../img/left2.png') center center no-repeat					
			.year-previous
				background-image url('../img/5db0b5e90cfef708be77e1131af48efb.png')
			.month-previous
				background-image url('../img/efbd8c51e6ecdbc17eceb1339219254d.png')
			.month-next
				background-image url('../img/98fd3d65d0f13ef7b497a1999b599fd0.png')
			.year-next
				background-image url('../img/df9a496198aba9f7ef82aeb2fa4fbc1c.png')
		.yaer-month
			flex 1
			text-align center
			line-height 44px
			font-size 12px
			font-weight bold
			color rgba(0, 0, 0, 0.85)
			@media(max-width 1100px)
				font-size 26px
				line-height 54px
	.container
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		padding 18px 0 13px
		@media(max-width 1100px)
			flex-wrap wrap
			width 90%
			margin 0 auto
			border-left 1px solid #dedede
			border-top 1px solid #dedede
		.column
			flex 1 1 50%
			@media(max-width 1100px)
				flex 0 0 100%
			.week
			.day .row
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				flex-wrap wrap
				align-items center
				justify-content center
				span
					margin 0 6px
					width 26px
					height 26px
					margin-bottom 5px
					font-size 14px
					color rgba(0, 0, 0, 0.25)
					line-height 26px
					text-align center
					font-weight bold
					@media(max-width 1100px)
						margin 0
						flex 1
						height 80px
						line-height 80px
						font-size 25px
						border-right 1px solid #dedede
						border-bottom 1px solid #dedede
			.week
				span
					color rgba(0, 0, 0, 0.85)
			.day .row
				span
					font-weight normal
					cursor no-drop
					&.today.select
						box-shadow 0 0 0 1px #2b6967
						border-radius 2px
						@media(max-width 1100px)
							background #e6791c
							color #fff
							border-radius 0
							box-shadow none
					&.select
						color rgba(0, 0, 0, 0.65)
						cursor pointer
						&.selected
							position relative
							background #e5f2f1
							&:after
								content ""
								position absolute
								right -12px
								width 12px
								top 0
								bottom 0
								background #e5f2f1
								z-index -1
								@media(max-width 1100px)
									display none
							&:last-child:after
								display none
					&.active
					&.active.today.select
						background #2b6967
						color #fff
						border-radius 2px
						&+.selected
							&:before
								content ""
								position absolute
								left -12px
								width 12px
								top 0
								bottom 0
								background #e5f2f1
								z-index -1
								@media(max-width 1100px)
									display none
	.control-btn
		display none
	@media(max-width 1100px)
		.control-btn
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			position fixed
			background #fff
			z-index 10
		.date
			padding-top 105px
